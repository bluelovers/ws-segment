{
  "name": "@novel-segment/api-server",
  "version": "1.0.7",
  "private": true,
  "description": "simple segment api server",
  "homepage": "https://github.com/bluelovers/ws-segment#readme",
  "bugs": {
    "url": "https://github.com/bluelovers/ws-segment/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluelovers/ws-segment.git"
  },
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "scripts": {
    "coverage": "npx nyc npm run test",
    "lint": "npx eslint **/*.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "npm:publish": "npm publish",
    "prepublishOnly": "npm run ncu && npm run sort-package-json",
    "postpublish:commit": "ts-node ./script/publish-after2.ts",
    "postpublish:done": "yarn run now-deploy && yarn run postpublish:commit",
    "postpublish_": "git commit -m \"publish new version\" .",
    "ncu": "npx yarn-tool ncu -u",
    "now-build": "yarn add novel-segment && yarn run now-build:run",
    "now-build:run": "node ./build.js",
    "now-deploy": "yarn run now-build && now deploy",
    "sort-package-json": "npx yarn-tool sort",
    "tsc:default": "tsc -p tsconfig.json",
    "tsc:esm": "tsc -p tsconfig.esm.json"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "crlf-normalize": "^1.0.3",
    "express": "^4.17.1",
    "fs-extra": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/fs-extra": "^8.1.0",
    "now": "^19.0.1"
  },
  "peerDependencies": {
    "novel-segment": "^2"
  },
  "engines": {
    "node": ">=10"
  }
}

{
  "version": 2,
  "name": "segment-api",
  "builds": [
    {
      "src": "index.js",
      "use": "@now/node@canary",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "public/index.html",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "/demo.html",
      "dest": "/public/index.html",
      "cache-control": "public, max-age=3600000"
    },
    {
      "src": ".*",
      "dest": "/index.js"
    }
  ]
}

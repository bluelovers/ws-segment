    "@types/chai": "^4.2.11",
    "@types/cross-spawn": "^6.0.2",
    "@types/diff": "^4.0.2",
    "@types/fs-extra": "^9",
    "@types/jest": "^25.2.3",
    "@types/lodash": "^4.14.155",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.11",
    "@types/transliteration": "^1.6.6",
    "@types/yargs": "^15.0.5",
    "array-hyper-unique": "^1.1.2",
    "chai": "^4.2.0",
    "chai-asserttype-extra": "^1.2.0",
    "chai-string": "^1.5.0",
    "cjk-conv": "^1.2.81",

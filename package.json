{
  "name": "ws-segment",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "license": "ISC",
  "author": "",
  "directories": {
    "test": "test"
  },
  "workspaces": [
    "packages/@novel-segment/*",
    "packages/*"
  ],
  "scripts": {
    "test": "lerna run --stream --scope novel-segment test-ts",
    "ci:install": "yarn add -W lerna yarn-tool cjk-conv ts-node typescript ynpx",
    "ci:build": "yarn run ci:build:script && yarn run ci:build:commit",
    "ci:build:script": "ts-node ./packages/novel-segment/test/demo.cache.ts",
    "ci:build:commit": "ts-node ./script/run/ci-build.ts",
    "preversion": "yarn run test && ts-node ./script/run/ws-prepublish.ts",
    "lerna:publish": "npx lerna publish",
    "lerna:publish:yes": "yarn run preversion && lerna publish --yes --bump patch --ignore @novel-segment/api-server --loglevel silly && yarn run postpublishOnly",
    "prepublish:fix-links": "ynpx @yarn-tool/fix-ws-links",
    "prepublish:lockfile": "npx sync-lockfile .",
    "postpublishOnly": "yarn run postpublish:segment & git push && yarn run postpublish:now-deploy && yarn run postpublish:subtree",
    "postpublish:git:subtree": "git subtree push novel-segment-cli master --prefix packages/novel-segment-cli && git subtree push node-segment master --prefix packages/novel-segment && git subtree push node-segment-dict master --prefix packages/segment-dict",
    "postpublish:now-deploy": "ts-node ./script/run/postpublish-now-deploy.ts",
    "postpublish:segment": "ts-node ./script/run/postpublish-segment.ts",
    "postpublish:subtree": "ts-node ./script/run/postpublish-subtree.ts",
    "postpublishOnly:add": "ts-node ./script/run/postpublish-add.ts",
    "ncu": "yarn run ncu:root && yarn run ncu:ws",
    "ncu:root": "npx yarn-tool ncu -u",
    "ncu:ws": "npx yarn-tool ws exec yarn-tool ncu -- -u",
    "sort-package-json": "yarn run sort-package-json:root && yarn run sort-package-json:ws",
    "sort-package-json:root": "npx yarn-tool sort",
    "sort-package-json:ws": "npx yarn-tool ws exec yarn-tool sort"
  },
  "resolutions": {},
  "dependencies": {
    "@yarn-tool/find-deps": "^1.0.11",
    "@yarn-tool/ws-changed": "^1.0.19",
    "bluebird": "^3.7.2",
    "ws-pkg-list": "^1.0.34"
  },
  "devDependencies": {
    "@bluelovers/fast-glob": "^3.0.4",
    "@bluelovers/tsconfig": "^1.0.19",
    "@git-lazy/diff-staged": "^1.0.23",
    "@git-lazy/util": "^1.0.22",
    "@types/benchmark": "^1.0.33",
    "@types/bluebird": "^3.5.32",
    "@types/chai": "^4.2.11",
    "@types/cross-spawn": "^6.0.2",
    "@types/diff": "^4.0.2",
    "@types/fs-extra": "^9",
    "@types/jest": "^26.0.3",
    "@types/lodash": "^4.14.157",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.14",
    "@types/transliteration": "^1.6.6",
    "@types/yargs": "^15.0.5",
    "array-hyper-unique": "^1.1.9",
    "chai": "^4.2.0",
    "chai-asserttype-extra": "^1.2.0",
    "chai-string": "^1.5.0",
    "cjk-conv": "^1.2.101",
    "cross-spawn-extra": "^2.1.0",
    "debug-color2": "^1.2.3",
    "diff": "^4.0.2",
    "fs-extra": "^9.0.1",
    "git-root2": "^1.0.19",
    "jest": "^26.1.0",
    "n-readlines": "^1.0.0",
    "prettyuse": "^0.0.0",
    "str-util": "^2.3.25",
    "string-natural-compare": "^3.0.1",
    "transliteration": "^2.1.11",
    "ts-jest": "^26.1.1",
    "uni-string": "^1.1.10",
    "upath2": "^3.1.5"
  }
}
